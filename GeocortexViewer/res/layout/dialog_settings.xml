<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RadioGroup
        android:id="@+id/rg_webmethod"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/rb_internalB"
            android:textSize="16sp"
            android:text="Use Internal Browser" />

        <RadioButton
            android:textSize="16sp"
            android:id="@+id/rb_externalB"
            android:text="Use External Browser (Chrome, etc.)" />
    </RadioGroup>
	<View android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:layout_marginLeft="8dp"
	    android:layout_marginRight="8dp"
	    android:background="@android:color/darker_gray"/>
    <CheckBox
		android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp"
        android:id="@+id/cb_showsplash"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show splash screen" />

</LinearLayout>